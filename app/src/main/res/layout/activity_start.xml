<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ActivityStart">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="cover image"
        android:scaleType="centerCrop"
        android:src="@drawable/workout_banner" />

    <!-- START BUTTON -->

    <!-- BMI CALCULATOR AND HISTORY ACTIVITY -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- BMI Layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- BMI CALCULATOR-->
            <LinearLayout
                android:id="@+id/bmi_ll"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_color_background"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Калькулятор BMI"
                android:layout_marginBottom="70dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/maps"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_color_background"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAP"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginBottom="50dp"
                android:text="Спортивные площадки"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- History Layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- History -->
            <ImageButton
                android:id="@+id/note"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circular_color_background"
                android:src="@drawable/ic_history" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="70dp"
                android:text="Заметки"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/alarm_ll"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_color_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/alarm_im"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circular_color_background"
                    android:src="@drawable/ic_alarm" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginBottom="50dp"
                android:text="Будильник"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>